<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#6E6B6B"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".GetTaskActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add a task"
        android:textColor="@color/text_black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Fill the details below to add a task into your TODO"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Task title"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gettitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="10dp"
                android:textColor="@color/edit_text_color"
                android:textSize="14sp"
                android:singleLine="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Task description"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/getdiscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="10dp"
                android:textColor="@color/edit_text_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Task date"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/getdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="10dp"
                android:hint="double tap to insert date"
                android:textColor="@color/edit_text_color"
                android:singleLine="true"
                android:editable="false"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Task time"
                android:textColor="@color/black" />

            <EditText

                android:id="@+id/gettime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="10dp"
                android:textColor="@color/edit_text_color"
                android:hint="double tap to insert time"
                android:textSize="14sp"
                android:editable="false"
                android:singleLine="true"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addTask"
                android:text="Add task"
                android:textSize="16sp"
                android:backgroundTint="#1047D1"
                android:background="@drawable/button_background"
                android:textColor="@color/white"

                android:layout_marginTop="40dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>